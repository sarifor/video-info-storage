extends templates/layout

block content
  if err
    p=err

  form(method="POST")
    input(placeholder="Name", name="name", type="text", value=user.name, required)
    input(placeholder="Username", name="username", type="text", value=user.username, required)
    input(placeholder="Password", name="password", type="password", value=user.password, required)
    input(placeholder="Confirm Password", name="password2", type="password", value=user.password, required)
    input(type="submit", value="Join")