extends templates/layout

block content
  main(style="user-select: auto;")

    if err
    p=err

    form(class="needs-validation" novalidate="" style="user-select: auto;" method="POST")
      div(class="row g-3" style="user-select: auto;")
        
        div(class="col-12" style="user-select: auto;")
          label(for="name" class="form-label" style="user-select: auto;")="Name"
          input(type="text" class="form-control" name="name" value=user.name style="user-select: auto;", required)

        div(class="col-12" style="user-select: auto;")
          label(for="username" class="form-label" style="user-select: auto;")="User Name"
          input(type="text" class="form-control" name="username" value=user.username style="user-select: auto;", required)

        div(class="col-12" style="user-select: auto;")
          label(for="password" class="form-label" style="user-select: auto;")="Password"
          input(type="password" class="form-control" name="password" value=user.password style="user-select: auto;", required)

      hr(class="my-4" style="user-select: auto;")

      button(class="w-100 btn btn-primary btn-lg" type="submit" style="user-select: auto;")="Edit Profile"