extends templates/layout

block content
  div(class="text-center")
    div(class="form-signin w-100 m-auto")

      if err
        p=err

      form(method="POST")
        h1(class="h3 mb-3 fw-normal")="Please sign in"

        div(class="form-floating")
          input(type="text" class="form-control" name="username" placeholder="some value", required)
          label(for="floatingInput")="User Name"

        div(class="form-floating")
          input(type="password" class="form-control" name="password" placeholder="some value", required)
          label(for="floatingPassword")="Password"
        
        button(class="w-100 btn btn-lg btn-primary" type="submit")="Login"