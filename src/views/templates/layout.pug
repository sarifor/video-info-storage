<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous")
    title="Video Storage Info"

  body
    div(class="container" style="user-select: auto;")
      header(class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom" style="user-select: auto;")
        a(href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none" style="user-select: auto;")
          span(class="fs-3" style="user-select: auto;")="Title"
        ul(class="nav nav-pills" style="user-select: auto;")
          if !loggedIn
            li(class="nav-item" style="user-select: auto;")
              a(href="/join" class="nav-link" style="user-select: auto;")="Join"
            li(class="nav-item" style="user-select: auto;")
              a(href="/login" class="nav-link active" style="user-select: auto;")="Login"
          if loggedIn
            li(class="nav-item" style="user-select: auto;")
              a(href="/edit" class="nav-link" style="user-select: auto;")="Edit"
            li(class="nav-item" style="user-select: auto;")
              a(href="/videos/upload" class="nav-link active" style="user-select: auto;")="Upload"
            li(class="nav-item" style="user-select: auto;")
              a(href="/logout" class="nav-link" style="user-select: auto;")="Logout"
            li(class="nav-item" style="user-select: auto;")
              span(class="fs-6" style="user-select: auto;")=`Hi! ${loggedUser.username} ^^`
            li(class="nav-item" style="user-select: auto;")
              div(class="flex-shrink-0 dropdown" style="user-select: auto;")
                img(src=`${loggedUser.profileUrl}` alt="mdo" width="32" height="32" class="rounded-circle" style="user-select: auto;")

    main(class="container" style="user-select: auto;")
      block content
    footer
      //
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous")